@model YusandyRegister.Models.Register

@{
    ViewBag.Title = "註冊";
}

<h2>會員註冊</h2>

<div class="navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">

            <button type="button" class="navbar-toggle"
                    data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="#" class="navbar-brand">御膳遞</a>
        </div>
        <div class="navbar-collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("回首頁", "Index", "Home")</li>
                <li>@Html.ActionLink("註冊", "Create", "Register")</li>
                <li>@Html.ActionLink("登入", "Enter", "Sigin")</li>
                <li>@Html.ActionLink("購物車", "Buy", "ShopingCar")</li>
                <li>@Html.ActionLink("關於我們", "About", "About")</li>
            </ul>
        </div>
    </div>

</div>

@using (Html.BeginForm())
{
    <p>
        帳號:@Html.TextBoxFor(model => model.User,
new { @class = "form-control", required = "required" })
    </p>
    <p>
        密碼:@Html.TextBoxFor(model => model.Pwd,
new { @class = "form-control", type = "password" })
    </p>
    <p>
        姓名:@Html.TextBoxFor(model => model.Name,
new { @class = "form-control" })
    </p>
    <p>
        地址:@Html.TextBoxFor(model => model.Adr,
new { @class = "form-control", required = "required" })
    </p>
    <p>
        電話:@Html.TextBoxFor(model => model.Tel,
new { @class = "form-control" })
    </p>
    <p>
        信箱:@Html.TextBoxFor(model => model.Mail,
new { @class = "form-control", type = "email" })
    </p>
    <p>
        生日:@Html.TextBoxFor(model => model.Bd,
new { @class = "form-control", type = "date" })
    </p>
    <p><input type="submit" value="註冊" class="btn btn-success" /></p>
    <hr />
    <p>@Html.Raw(ViewBag.Msg)</p>
}

